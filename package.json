{
    "name": "stream-analycer",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "start": "serve dist",
        "build:css": "tailwindcss -i css/main.css -o dist/assets/main.css --minify",
        "build:js": "node esbuild.config.mjs",
        "build": "rm -rf dist && mkdir -p dist/assets && npm run build:css && npm run build:js",
        "watch:css": "tailwindcss -i css/main.css -o dist/assets/main.css --watch",
        "watch:js": "node esbuild.config.mjs --watch",
        "dev": "rm -rf dist && mkdir -p dist/assets && npm-run-all --parallel watch:*",
        "typecheck": "tsc --noEmit -p tsconfig.json",
        "lint": "eslint . --ext .js",
        "format": "prettier --write ."
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {
        "autoprefixer": "^10.4.22",
        "diff": "^8.0.2",
        "echarts": "^6.0.0",
        "fast-xml-parser": "^5.3.2",
        "lit-html": "^3.3.1",
        "lucide": "^0.555.0",
        "postcss": "^8.5.6",
        "serve": "^14.2.5",
        "shaka-player": "^4.16.11",
        "xml-formatter": "^3.6.7",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@types/node": "^24.10.1",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.5.0",
        "msw": "^2.12.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.7.4",
        "tailwindcss": "^4.1.17",
        "typescript": "^5.9.3"
    },
    "msw": {
        "workerDirectory": [
            "public"
        ]
    }
}
